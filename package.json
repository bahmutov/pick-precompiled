{
  "name": "pick-precompiled",
  "description": "Picks precompiled bundle during install",
  "main": "index.js",
  "version": "0.0.0-semantic-release",
  "bin": {
    "pick-precompiled": "bin/pick-precompiled.js"
  },
  "dependencies": {
    "babel-polyfill": "6.3.14",
    "check-more-types": "2.10.0",
    "glob": "6.0.4",
    "lazy-ass": "1.3.0"
  },
  "devDependencies": {
    "condition-node-version": "1.2.0",
    "semantic-release": "^4.3.5",
    "standard": "5.4.1"
  },
  "files": [
    "bin"
  ],
  "scripts": {
    "test": "npm run postinstall",
    "lint": "standard bin/*.js",
    "postinstall": "echo \"Picking pre-compiled bundle\" && npm run pick",
    "pick": "node bin/pick-precompiled.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/pick-precompiled.git"
  },
  "release": {
    "verifyConditions": {
      "path": "condition-node-version",
      "node": "4.2.2",
      "verbose": true
    }
  },
  "keywords": [
    "pre-compiled",
    "bundle",
    "ES6",
    "ES2015"
  ],
  "config": {
    "pre-compiled": {
      "dir": "test-dist",
      "files": [
        "test/main.js",
        "test/bin-main.js"
      ]
    }
  },
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/pick-precompiled/issues"
  },
  "homepage": "https://github.com/bahmutov/pick-precompiled#readme"
}
